{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Liste des utilisateurs {% endblock %}
{% block contenu %} 
    <div class="row">
        <div class="col col-lg-6 md-6 sm-12">
            <h2>Liste des utulisateurs :</h2>
            <br>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nom de l'utilisateur</th>
                        <th scope="col">Grades</th>
                        <th scope="col">Modifier</th>
                        <th scope="col"> Supprimer</th>
                     </tr>
                </thead>
                <tbody>
                    {% for u in list %}
                        <tr>
                          <th scope="row">{{u.identifiant}}</th>
                          <td style="color: {{u.hexaColor}};">{{u.libelle}}</td>
                          <td><a class="btn btn-primary alert-info" href="index.php?page=modifutilisateur&id={{u.id}}">Modifier</a></td>
                          <td><a class="btn btn-primary alert-danger"> Supprimer </a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    
{% endblock %}
